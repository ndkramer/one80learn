{
  "name": "student-learning-platform",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "build:analyze": "npm run build && vite-bundle-analyzer dist",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:unit": "vitest run src/**/*.test.{ts,tsx}",
    "test:integration": "vitest run src/test/integration/**/*.test.{ts,tsx}",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "@tanstack/react-query": "^5.82.0",
    "@tiptap/extension-code-block-lowlight": "^2.26.0",
    "@tiptap/extension-color": "^2.26.0",
    "@tiptap/extension-highlight": "^2.26.0",
    "@tiptap/extension-image": "^2.26.0",
    "@tiptap/extension-link": "^2.26.0",
    "@tiptap/extension-placeholder": "^2.1.13",
    "@tiptap/extension-table": "^2.26.0",
    "@tiptap/extension-table-cell": "^2.26.0",
    "@tiptap/extension-table-header": "^2.26.0",
    "@tiptap/extension-table-row": "^2.26.0",
    "@tiptap/extension-task-item": "^2.26.0",
    "@tiptap/extension-task-list": "^2.26.0",
    "@tiptap/extension-text-style": "^2.26.0",
    "@tiptap/react": "^2.1.13",
    "@tiptap/starter-kit": "^2.1.13",
    "@types/uuid": "^10.0.0",
    "html2canvas": "^1.4.1",
    "jspdf": "^2.5.1",
    "lowlight": "^3.3.0",
    "lucide-react": "^0.294.0",
    "pdf-lib": "^1.17.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-pdf": "^7.6.0",
    "react-router-dom": "^6.20.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "@vitejs/plugin-react": "^4.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.53.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "happy-dom": "^18.0.1",
    "msw": "^2.10.3",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.0",
    "vite-bundle-analyzer": "^1.1.0",
    "vitest": "^3.2.4"
  }
}
